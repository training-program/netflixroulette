{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["./src/*"]
    },
    "sourceMap": false
  },
  "include": ["src/**/*", "./*.config.js", "./.eslintrc.js", "./cypress/**/*"],
  "exclude": ["node_modules", "dist"]
}
